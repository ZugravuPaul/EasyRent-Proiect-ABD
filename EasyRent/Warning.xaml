<Window x:Class="EasyRent.Warning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warning" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Invalid username or password. Please try again." FontWeight="Bold"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="99,123,0,0" VerticalAlignment="Top" Width="75" FontWeight="Bold" Click="Button_Click"/>
        <Image HorizontalAlignment="Left" Height="72" Margin="106,0,0,0" VerticalAlignment="Top" Width="68" Source="warning.jpg"/>
    </Grid>
</Window>
